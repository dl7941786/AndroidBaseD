<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qianfeng.braodcastreciver.MainActivity">

    <Button
        android:id="@+id/sendbroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="发送广播" />

    <Button
        android:id="@+id/createnoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sendbroadcast"
        android:onClick="onClick"
        android:text="创建通知" />

    <Button
        android:id="@+id/sendbroadkuachengxu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/createnoti"
        android:onClick="onClick"
        android:text="发跨程序的广播" />
    <Button
        android:layout_width="wrap_content"
        android:text="电量"
        android:id="@+id/battery"
        android:onClick="onClick"
        android:layout_below="@id/sendbroadcast"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="粘性广播"
        android:id="@+id/sticky"
        android:onClick="onClick"
        android:layout_below="@id/battery"
        android:layout_height="wrap_content" />

</RelativeLayout>
