<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qianfeng.notificationdemo.MainActivity">

    <Button
        android:id="@+id/send5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="点击就送五分钱" />

    <Button
        android:id="@+id/send5t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/send5"
        android:onClick="onClick"
        android:text="五分钱同桌六分钱" />

    <Button
        android:id="@+id/sendc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/send5t"
        android:onClick="onClick"
        android:text="超哥" />

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/send5"
        android:inputType="number" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et"
        android:onClick="onClick"
        android:text="取消" />

    <Button
        android:id="@+id/custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_alignBottom="@id/cancel"
        android:layout_toRightOf="@id/cancel"
        android:text="自定义的通知" />
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/download"
        android:text="下载"
        android:onClick="onClick"
        android:layout_toRightOf="@id/custom"
        android:layout_below="@id/et"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/custom2"
        android:text="自定义2"
        android:onClick="onClick"
        android:layout_toRightOf="@id/download"
        android:layout_below="@id/et"
        android:layout_height="wrap_content" />
</RelativeLayout>
