<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!--四个角的弧度-->
    <corners android:radius="10dp" />
    <size
        android:width="100px"
        android:height="100px" />
    <solid android:color="#f00" />
    <!--描边 width线的宽度  dashGap虚线间的间隔  dashWidth虚线的长度-->
    <stroke
        android:width="1px"
        android:color="#00f"
        android:dashGap="1px"
        android:dashWidth="1px" />
    <!--angle 渐变的角度,默认为0 从左到右, 必须写45的倍数,逆时针旋转-->
    <!--type 渐变的类型 linear线性渐变 sweep扫描   radial辐射-->
    <gradient
        android:centerColor="#0f0"
        android:endColor="#f00"
        android:startColor="#00f"
        android:angle="180"
        android:gradientRadius="30px"
        android:type="radial"
        android:useLevel="false"
        />
</shape>